{
	"root": true,
	"extends": [
		"plugin:@wordpress/eslint-plugin/recommended-with-formatting",
		"plugin:import/recommended",
		"plugin:eslint-comments/recommended"
	],
	"plugins": [],
	"env": {
		"browser": true
	},
	"globals": {
		"_": true,
		"OneAccessSettings": true,
		"OneAccess": true,
		"OneAccessProfile": true
	},
	"rules": {
		"jsdoc/check-indentation": "error",
		"no-shadow": "warn",
		"@wordpress/no-unsafe-wp-apis": "off" // need to remove in future when component is updated.
	},
	"overrides": [
		{
			"files": [
				"**/__tests__/**/*.js",
				"**/test/*.js",
				"**/?(*.)test.js",
				"tests/js/**/*.js"
			],
			"extends": ["plugin:jest/all"],
			"rules": {
				// Add Rules for Jest here
			}
		}
	]
}